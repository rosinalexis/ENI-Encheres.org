{% extends 'base.html.twig' %}

{% block title %}Authentification!
{% endblock %}

{% block body %}
	<div class="container">
		<form id="login-form" method="post">
			{% if error %}
				<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div>
					Bienvenu
					{{ app.user.username }},
					<a href="{{ path('app_logout') }}">Logout</a>
				</div>
			{% endif %}

			<h1 class="text-center text-uppercase">Authentification</h1>

			<label for="inputEmail">Email</label>

			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus>

			<label for="inputPassword">Password</label>

			<input type="password" name="password" id="inputPassword" autocomplete="current-password" required>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<div>
				<label>
					<input type="checkbox" name="_remember_me">
					Se souvenir de moi
				</label>
			</div>

			<button type="submit">
				Connexion
			</button>
		</form>
	</div>

{% endblock %}
